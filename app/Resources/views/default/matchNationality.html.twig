{% extends '::base.html.twig' %}

{% block body %}
    <h3>Matches</h3>
    <div class="match_tables">
        <table style="float: left">
            <tr>
                <th>Matched Employee</th>
                <th>Nationality</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Languages</th>
            </tr>
            {% for employee in employees %}
                <tr>
                    <td>{{ employee.firstname }} {{ employee.lastname }}</td>
                    <td>{{ employee.nationality }}</td>
                    <td>{{ employee.age }}</td>
                    {% if employee.gender is same as(0) %}
                        <td>Male</td>
                    {% else %}
                        <td>Female</td>
                    {% endif %}
                    {% for key, language in employee.languages %}
                        <td>{{ employee.languages[key] }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>
        <table style="float: left">
            <tr>
                <th>Newbie</th>
                <th>Nationality</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Languages</th>
            </tr>
            {% for newbie in newbies %}
                <tr>
                    <td>{{ newbie.firstname }} {{ newbie.lastname }}</td>
                    <td>{{ newbie.nationality }}</td>
                    <td>{{ newbie.age }}</td>
                    {% if newbie.gender is same as(0) %}
                        <td>Male</td>
                    {% else %}
                        <td>Female</td>
                    {% endif %}
                    {% for key, language in newbie.languages %}
                        <td>{{ newbie.languages[key] }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>
        <table>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </table>
    </div>
{% endblock %}