{% extends '::base.html.twig' %}

{% block body %}
    <h3>Matches</h3>
    <div class="match_tables">
        <table style="float: left">
            <tr>
                <th>Matched Employee</th>
                <th>Nationality</th>
                <th>Gender</th>
                <th>Age</th>
            </tr>
            {% for employee in employees %}
            <tr>
                <td>{{ employee.firstname }} {{ employee.lastname }}</td>
                <td>{{ employee.nationality }}</td>
                {% if employee.gender is same as(0) %}
                    <td>Male</td>
                {% else %}
                    <td>Female</td>
                {% endif %}
                <td>{{ employee.age }}</td>
            </tr>
            {% endfor %}
        </table>
        <table style="float: left">
            <tr>
                <th>Newbie</th>
                <th>Nationality</th>
                <th>Gender</th>
                <th>Age</th>
            </tr>
            {% for newbie in newbies %}
            <tr>
                <td>{{ newbie.firstname }} {{ newbie.lastname }}</td>
                <td>{{ newbie.nationality }}</td>
                {% if newbie.gender is same as(0) %}
                    <td>Male</td>
                {% else %}
                    <td>Female</td>
                {% endif %}
                <td>{{ newbie.age }}</td>
            </tr>
            {% endfor %}
        </table>
        <div>
            <form action="#">
                <button type="submit" class="btn btn-lg btn-success" >Match</button>
            </form>
            <div class="checkboxes">
                <label class="checkbox-inline"><input type="checkbox" value="nationality" checked>Nationality</label>
                <label class="checkbox-inline"><input type="checkbox" value="languages" checked>Languages</label>
                <label class="checkbox-inline"><input type="checkbox" value="age" checked>Age</label>
                <label class="checkbox-inline"><input type="checkbox" value="Gender" checked>Gender</label>
            </div>
        </div>
    </div>
{% endblock %}