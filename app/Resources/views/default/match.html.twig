{% extends '::base.html.twig' %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
{#{% form_theme form 'form/checkboxes.html.twig' %}#}

{% block body %}
    <div class="alert alert-success">
        <strong>{{ success }}</strong>
    </div>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-1">{{ form_widget(form.nationality) }}</div>
        <div class="col-md-1">{{ form_widget(form.age) }}</div>
        <div class="col-md-1">{{ form_widget(form.gender) }}</div>
        <div class="col-md-1">{{ form_widget(form.languages) }}</div>
        <div class="col-md-1">{{ form_widget(form.match) }}</div>
    </div>
    {{ form_end(form) }}
    <p class="h2"><h2>Matches</h2></p>
    <div class="table-responsive col-md-6">
        <table class="table" style="float: left">
            <tr>
                <th>Matched Employee</th>
                <th>Nationality</th>
                <th>Gender</th>
                <th>Age</th>
                <th>Languages</th>
            </tr>
            {% for employee in employees %}
            <tr>
                <td>{{ employee.firstname }} {{ employee.lastname }}</td>
                <td>{{ employee.nationality }}</td>
                <td>{{ employee.gender|genderDecision }}</td>
                <td>{{ employee.age }}</td>
                {% for key, language in employee.languages %}
                    <td>{{ employee.languages[key] }}</td>
                {% endfor %}
            </tr>
            {% endfor %}
        </table>
    </div>
    <div class="table-responsive col-md-6">
        <table class="table" style="float: left">
            <tr>
                <th>Newbie</th>
                <th>Nationality</th>
                <th>Gender</th>
                <th>Age</th>
                <th>Languages</th>
            </tr>
            {% for newbie in newbies %}
            <tr>
                <td>{{ newbie.firstname }} {{ newbie.lastname }}</td>
                <td>{{ newbie.nationality }}</td>
                <td>{{ newbie.gender|genderDecision }}</td>
                <td>{{ newbie.age }}</td>
                {% for key, language in newbie.languages %}
                    <td>{{ newbie.languages[key] }}</td>
                {% endfor %}
            </tr>
            {% endfor %}
        </table>
    </div>
    <script>
        window.setTimeout(function() {
            $(".alert-success").fadeTo(300, 0).slideUp(500, function(){
                $(this).remove();
            });
        }, 2000);
    </script>
{% endblock %}