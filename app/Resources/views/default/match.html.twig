{% extends '::base.html.twig' %}

{% block body %}
    <h3>Matches</h3>
    <div class="match_tables">
        <table style="float: left">
            <tr>
                <th>Matched Employee</th>
                <th>Nationality</th>
                <th>Gender</th>
                <th>Age</th>
            </tr>
            {% for employee in employees %}
            <tr>
                <td>{{ employee.firstname }} {{ employee.lastname }}</td>
                <td>{{ employee.nationality }}</td>
                {% if employee.gender is same as(0) %}
                    <td>Male</td>
                {% else %}
                    <td>Female</td>
                {% endif %}
                <td>{{ employee.age }}</td>
            </tr>
            {% endfor %}
        </table>
        <table style="float: left">
            <tr>
                <th>Newbie</th>
                <th>Nationality</th>
                <th>Gender</th>
                <th>Age</th>
            </tr>
            {% for newbie in newbies %}
            <tr>
                <td>{{ newbie.firstname }} {{ newbie.lastname }}</td>
                <td>{{ newbie.nationality }}</td>
                {% if newbie.gender is same as(0) %}
                    <td>Male</td>
                {% else %}
                    <td>Female</td>
                {% endif %}
                <td>{{ newbie.age }}</td>
            </tr>
            {% endfor %}
        </table>
        <table style="float: left">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </table>
    </div>

{% endblock %}